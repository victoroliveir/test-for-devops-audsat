pipeline {
    agent any
    
    stages {
        stage('Compilação') {
            agent {
                docker { image 'maven:latest' } // Usa uma imagem Docker com Maven
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Teste') {
            agent {
                docker { image 'maven:latest' } // Usa uma imagem Docker com Maven
            }
            steps {
                sh 'mvn test'
            }
        }
        stage('Implantação no Kubernetes') {
            agent {
                docker { 
                    image 'bitnami/kubectl' 
                    args '-i --entrypoint='
                }
            }
            environment {
                KUBECONFIG = credentials('kubeconfig_minikube')
            }
            steps {
                script {
                    withCredentials([file(credentialsId: 'kubeconfig_minikube', variable: 'KUBECONFIG')]) {
                        sh 'kubectl apply -n audsat -f k8s/deployment.yaml --kubeconfig=$KUBECONFIG'
                    }
                }
            }
        }
    }
}
