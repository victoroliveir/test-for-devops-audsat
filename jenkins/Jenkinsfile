pipeline {
    agent any
    
    stages {
        stage('Compilação') {
            agent {
                docker { image 'maven:latest' } // Usa uma imagem Docker com Maven
            }
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Teste') {
            agent {
                docker { image 'maven:latest' } // Usa uma imagem Docker com Maven
            }
            steps {
                sh 'mvn test'
            }
        }
        stage('Implantação no Kubernetes') {
            environment {
                KUBECONFIG = credentials('kubernetes-credentials-id')
            }
            steps {
                script {
                    withCredentials([file(credentialsId: '85bbb980-7fc0-4c83-9ae4-c2624b4147a1', variable: 'KUBECONFIG')]) {
                        sh 'kubectl apply -f kubernetes/deployment.yaml --kubeconfig=$KUBECONFIG'
                    }
                }
            }
        }
    }
}
